{
  "name": "shadowserver",
  "version": "1.0.0",
  "label": "Shadow Server",
  "description": "Shadow server provides you with access to the most timely, critical Internet security like data collection,network reporting,investigation support ,reveal security vulnerabilities, expose malicious activity and help remediate victims.",
  "publisher": "spryIQ.co",
  "icon_small_name": "small.png",
  "icon_large_name": "large.png",
  "cs_compatible": true,
  "cs_approved": false,
  "category": "Vulnerability and Risk Management",
  "help_online": "https://github.com/fortinet-fortisoar/connector-shadowserver/blob/release/1.0.0/docs/ShadowServerConnectorDoc.md",
  "configuration": {
    "fields": [
      {
        "title": "Server URL",
        "type": "text",
        "name": "server_url",
        "required": true,
        "visible": true,
        "editable": true,
        "placeholder": "e.g: https://api.shadowserver.org or api.shadowserver.org",
        "tooltip": "Specify the URL of the shadow-server server to connect and perform automated operations.",
        "value": "api.shadowserver.org"
      }
    ]
  },
  "operations": [
    {
      "title": "Get Origin Query",
      "operation": "get_origin_query",
      "description": "Report back the originating ASN and ASN name for the specific CIDR.",
      "annotation": "get_origin_query",
      "category": "investigation",
      "parameters": [
        {
          "title": "IP Address",
          "type": "text",
          "name": "ip_address",
          "required": true,
          "visible": true,
          "editable": true,
          "value": "",
          "placeholder": "e.g:1.1.1.1",
          "tooltip": "Specify the IP address."
        }
      ],
      "output_schema": [
        {
          "asname_short": "",
          "prefix": "",
          "asn": "",
          "asname_long": "",
          "geo": "",
          "nic": ""
        }
      ],
      "open": false
    },
    {
      "title": "Get Peer Query",
      "operation": "get_peer_query",
      "description": "Report back all the BGP peers for a specific CIDR.",
      "annotation": "get_peer_query",
      "category": "investigation",
      "parameters": [
        {
          "title": "IP Address",
          "type": "text",
          "name": "ip_address",
          "required": true,
          "visible": true,
          "editable": true,
          "value": "",
          "placeholder": "e.g:1.1.1.1",
          "tooltip": "Specify the IP address"
        }
      ],
      "output_schema": [
        {
          "prefix": "",
          "peer": "",
          "asn": "",
          "asname_short": "",
          "asname_long": "",
          "geo": "",
          "nic": ""
        }
      ],
      "open": false
    },
    {
      "title": "Get Prefix Query",
      "operation": "get_prefix_query",
      "description": "Given an ASN report back all the routed CIDR's.",
      "annotation": "get_prefix_query",
      "category": "investigation",
      "parameters": [
        {
          "title": "Query",
          "type": "text",
          "name": "query",
          "required": true,
          "visible": true,
          "editable": true,
          "value": "",
          "placeholder": "e.g:22414",
          "tooltip": "Specify the Query."
        }
      ],
      "output_schema": [],
      "open": false
    },
    {
      "title": "Get ASN Query",
      "operation": "get_asn_query",
      "description": "Report back any information about the ASN.",
      "annotation": "get_asn_query",
      "category": "investigation",
      "parameters": [
        {
          "title": "Query",
          "type": "text",
          "name": "query",
          "required": true,
          "visible": true,
          "editable": true,
          "value": "",
          "placeholder": "e.g:109",
          "tooltip": "Specify the query."
        }
      ],
      "output_schema": [
        {
          "asname_short": "",
          "date": "",
          "asn": "",
          "asname_long": "",
          "geo": "",
          "nic": ""
        }
      ],
      "open": false
    },
